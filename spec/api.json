{
  "routes": [
    {
      "name": "createDeviceType",
      "method": "POST",
      "path": "/device-types",
      "description": "Creates a new device type",
      "link": "https://iotery.io/v1/docs#createDeviceType"
    },
    {
      "name": "getDeviceTypes",
      "method": "GET",
      "path": "/device-types",
      "description": "Gets all device types",
      "query": { "limit": "Number of device types to get" },
      "link": "https://iotery.io/v1/docs#getDeviceTypes"
    },
    {
      "name": "getDeviceTypeByUuid",
      "method": "GET",
      "path": "/device-types/:deviceTypeUuid",
      "description": "Gets a device type by uuid",
      "link": "https://iotery.io/v1/docs#getDeviceyTypeByUuid"
    },
    {
      "name": "updateDeviceType",
      "method": "PATCH",
      "path": "/device-types/:deviceTypeUuid",
      "description": "Updates a device type by uuid",
      "link": "https://iotery.io/v1/docs#updateDeviceType"
    },
    {
      "name": "deleteDeviceType",
      "method": "DELETE",
      "path": "/device-types/:deviceTypeUuid",
      "description": "Deletes a device type by uuid",
      "link": "https://iotery.io/v1/docs#deleteDeviceType"
    },

    {
      "name": "createDevice",
      "method": "POST",
      "path": "/device-types/:deviceTypeUuid/devices",
      "description": "Creates a new device with a given device type",
      "link": "https://iotery.io/v1/docs#createDevice"
    }
  ]
}
